<%- include("partials/header") %> <% posts.forEach(function(post){%>

<h1><%=post.title%></h1>

<% if(post.postContent.length > 100){ %>
<p><%= post.postContent.substring(0,200) + " ... "%></p>
<a href="/posts/<%=post.title%>">Read More</a>
<% } else { %>
<p><%= post.postContent%> </p>
<a href="/posts/<%=post.postContent%>">View Post</a>


<% } %> <%})%>

<div class="compose">
   <a class="btn btn-primary" href="http://localhost:3000/compose">Compose</a>
